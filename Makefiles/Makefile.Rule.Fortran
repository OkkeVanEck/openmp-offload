include ../../Makefiles/Makefile.inc

# jacobi.Fortran : Jacobi.f90
# 	$(FC) $(FFLAGS) $(LIBS) $< -o ${@}.${COMPILER}.exe
# 	rm -f *.mod

ftn: Jacobi.f90
	ftn -O3 -homp -hnoacc -Ofast -fopenmp Jacobi.f90 -lm -o jacobi_ftn.o

nvfortran: Jacobi.f90
	nvfortran -O3 -fopenmp Jacobi.f90 -lm -o jacobi_nvfortran.o

gfortran: Jacobi.f90
	gfortran -O3 -homp -hnoacc -Ofast -fopenmp Jacobi.f90 -lm -o jacobi_gfortran.o

clean:
	rm -f *.o *.mod *.exe
